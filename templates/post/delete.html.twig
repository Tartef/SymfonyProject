{% extends 'base.html.twig' %}
{% block title %}Supprimer le Post{% endblock %}
{% block body %}
    <div class="container">
        <h1>Supprimer le Post</h1>
        <div class="post-container">
            <div class="post-card">
                <h3>{{ post.title }}</h3>
                <p>{{ post.content }}</p>
            </div>
            <form method="post" action="{{ path('app_delete_post', {'id': post.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer ce post ?');">
                <button type="submit" class="btn btn-danger">Supprimer</button>
            </form>
            <a href="{{ path('app_show_post', {'id': post.id}) }}" class="btn btn-primary">Annuler</a>
        </div>
    </div>
{% endblock %}
