{% extends 'base.html.twig' %}


{% block title %}Modifier un Post{% endblock %}

{% block body %}
    <div class="container">
        <h1>Modifier un Post</h1>

        {{ form_start(form, {'attr': {'class': 'form edit-form'}}) }}

        <div class="form-group">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Titre'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.content) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Contenu'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
        {{ form_end(form) }}

        <a href="{{ path('app_posts') }}" class="btn btn-secondary">Retour Ã  la liste des posts</a>
    </div>
{% endblock %}
