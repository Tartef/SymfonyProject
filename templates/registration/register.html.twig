{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    <div class="container">
        <h1>S'enregistrer</h1>

        <div class="form login_form">
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {'label_attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.email, {'label_attr': {'class': 'form-control'}}) }}
            {{ form_row(registrationForm.password.first) }}
            {{ form_row(registrationForm.password.second) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <button type="submit" class="registration-button">S'enregistrer</button>
            <p>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
